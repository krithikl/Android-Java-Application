<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="10"
              tools:context=".ItemDetailsActivity"
              android:background="#212121">

    <LinearLayout
            android:layout_weight="6"
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="274dp"
                android:id="@+id/large_images"
                tools:listitem="@layout/images_recycler"
                android:background="@drawable/top_pick_style"
                android:paddingRight="5dp"
                android:paddingLeft="5dp" />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="113dp"
                    android:layout_margin="20dp"
                    android:layout_height="85dp"
                    android:id="@+id/image"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/top_pick_style"
                    />
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:id="@+id/unitPrice"
                    android:theme="@style/Theme.ComponentCompanion.HighlightText"
                    android:textSize="24sp"
                    android:paddingTop="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/top_pick_style"
                    android:backgroundTint="#1b1b1b"

                    android:lines="1"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:padding="15dp" >
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/itemMake"
                android:theme="@style/Theme.ComponentCompanion.HighlightText"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:paddingLeft="8dp"
                android:background="@drawable/top_pick_style"
                android:backgroundTint="#1b1b1b"
                android:paddingRight="8dp"
                android:lines="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itemValue"
                android:theme="@style/Theme.ComponentCompanion.HighlightText"
                android:background="@drawable/top_pick_style"
                android:backgroundTint="#1b1b1b"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:lines="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itemModel"
                android:theme="@style/Theme.ComponentCompanion.HighlightText"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:paddingLeft="8dp"
                android:background="@drawable/top_pick_style"
                android:paddingRight="8dp"
                android:backgroundTint="#1b1b1b"
                android:lines="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itemViews"
                android:theme="@style/Theme.ComponentCompanion.HighlightText"
                android:background="@drawable/top_pick_style"
                android:backgroundTint="#1b1b1b"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingRight="8dp"
                android:layout_marginBottom="16dp"
                android:paddingLeft="8dp"

                android:lines="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/category"
                android:theme="@style/Theme.ComponentCompanion.HighlightText"
                android:background="@drawable/top_pick_style"
                android:backgroundTint="#1b1b1b"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingRight="8dp"
                android:layout_marginBottom="16dp"
                android:paddingLeft="8dp"

                android:lines="1"/>
    </LinearLayout>
</LinearLayout>
