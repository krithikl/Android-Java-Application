<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="3dp"
            tools:layout_editor_absoluteX="3dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="end">
            <ImageView
                    android:layout_width="44dp"
                    android:layout_height="43dp" app:srcCompat="@drawable/search_icon" android:id="@+id/imageView5"
                    android:theme="@style/Theme.ComponentCompanion.Button" android:scaleType="fitXY"
                    android:background="@color/customPurple" android:padding="5dp" android:contentDescription="TODO"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>