<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="91dp" android:background="#65499c" android:id="@+id/linearLayout">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="499dp" android:layout_weight="3">
            <SearchView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_style"

            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="464dp" android:layout_weight="3">
            <EditText
                    android:layout_width="200dp"
                    android:layout_height="61dp"
                    android:text="Top Picks"
                    android:ems="10"
                    android:id="@+id/editTextTextPersonName7" android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:clickable="false"
                    android:textIsSelectable="false"/>
        </LinearLayout>
        <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="581dp" android:layout_weight="3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                <ImageButton
                        android:id="@+id/topPick1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/transistor"
                        android:scaleType="centerInside"
                        android:background="@android:color/transparent"
                />


                <ImageButton
                        android:id="@+id/topPick2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:layout_constraintStart_toEndOf="@id/topPick1"
                        android:layout_marginStart="5dp"
                        app:layout_constraintTop_toTopOf="@id/topPick1"
                        app:srcCompat="@drawable/inductor"
                        android:scaleType="centerInside"
                        android:background="@android:color/transparent"
                />

                <ImageButton
                        android:id="@+id/topPick3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:layout_constraintStart_toEndOf="@id/topPick2"
                        android:layout_marginStart="5dp"
                        app:layout_constraintTop_toTopOf="@id/topPick2"
                        app:srcCompat="@drawable/capacitor"
                        android:scaleType="centerInside"
                        android:background="@android:color/transparent"
                />

                <ImageButton
                        android:id="@+id/topPick4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:layout_constraintStart_toEndOf="@id/topPick3"
                        android:layout_marginStart="5dp"
                        app:layout_constraintTop_toTopOf="@id/topPick3"
                        app:srcCompat="@drawable/integrated_circuit"
                        android:scaleType="centerInside"
                        android:background="@android:color/transparent"
                />

                <ImageButton
                        android:id="@+id/topPick5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:layout_constraintStart_toEndOf="@id/topPick4"
                        android:layout_marginStart="5dp"
                        app:layout_constraintTop_toTopOf="@id/topPick4"
                        app:srcCompat="@drawable/opamp"
                        android:scaleType="centerInside"
                        android:background="@android:color/transparent"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>
        <EditText
                android:layout_width="203dp"
                android:layout_height="178dp"
                android:inputType="textPersonName"
                android:text="Categories"
                android:ems="10"
                android:id="@+id/editTextTextPersonName2" android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:backgroundTint="@android:color/white"

        />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="509dp" android:layout_weight="2">

            <Button
                    android:background="@drawable/round_style"
                    android:text="@string/category_one"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" android:id="@+id/passiveButton" android:layout_weight="1"
                    android:theme="@style/Theme.ComponentCompanion.Button" android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"

            />
            <Button
                    android:background="@drawable/round_style"
                    android:text="@string/category_two"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" android:id="@+id/activeButton" android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
            />

            <Button
                    android:background="@drawable/round_style"
                    android:text="@string/category_three"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" android:id="@+id/circuitsButton" android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
            />

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
